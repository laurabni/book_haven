<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Book Haven | {% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/logo1.png') }}">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="mb-4">
            <nav class="navbar navbar-expand-lg" style="background-color: #f1ede9">
                <div class="container-fluid">
                    <div class="container">
                        <a class="navbar-brand" href="{{ path('home') }}">
                            <img src="{{ asset('images/logo2.png') }}" alt="logo">
                        </a>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link fw-semibold" href="{{ path('home') }}">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold" href="{{ path('app_book_index') }}">Livres</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold" href="{{ path('admin') }}">Administrateur</a>
                            </li>
                            {% if app.user %}
                                <li class="nav-item">
                                    <p class="nav-link fw-bold text-black">{{ app.user.email }}</p>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('app_cart_index') }}" class="nav-link fw-semibold"><i class="bi bi-cart3"></i></a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('app_logout') }}" class="nav-link"><i class="bi bi-box-arrow-right"></i></a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a href="{{ path('app_login') }}" class="nav-link"><i class="bi bi-person-circle"></i></a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
        <footer style="background-color: #f1ede9">
            <div class="container py-4 py-md-5 px-4 px-md-3 text-body-secondary">
                <div class="row">
                    <div class="col-lg-3 mb-3">
                        <a class="d-inline-flex align-items-center mb-2 text-body-emphasis text-decoration-none" href="/" aria-label="Bootstrap">
                            <img src="{{ asset('images/logo1.png') }}" alt="logo" height="220px">
                        </a>
                    </div>
                    <div class="col-6 col-lg-2 offset-lg-1 mb-3">
                        <h5 class="my-5"><a href="{{ path('app_book_index') }}">Livres</a></h5>
                        <h5 class="my-5"><a href="{{ path('app_author_index') }}">Auteurs</a></h5>
                    </div>
                    <div class="col-6 col-lg-2 mb-3">
                        <h5 class="my-5"><a href="{{ path('app_category_index') }}">Catégories</a></h5>
                        <h5 class="my-5"><a href="{{ path('app_format_index') }}">Formats</a></h5>
                    </div>
                    <div class="col-6 col-lg-2 mb-3">
                        <h5 class="my-5"><a href="{{ path('apropos') }}">À propos</a></h5>
                        <h5 class="my-5"><a href="{{ path('cgv') }}">Conditions générales de ventes</a></h5>
                    </div>
                </div>
            </div>
        </footer>



        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
