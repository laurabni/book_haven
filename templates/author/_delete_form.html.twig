<form method="post" action="{{ path('app_author_delete', {'id': author.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet auteur?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
    <button class="btn text-light" style="background-color: #2d6a4f"><i class="bi bi-trash3-fill"></i> Supprimer</button>
</form>
