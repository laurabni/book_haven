<form method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce livre?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn text-light" style="background-color: #2d6a4f"><i class="bi bi-trash3-fill"></i> Supprimer</button>
</form>
